<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Followshows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Class="Followshows.ShowPage"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    d:DataContext="{d:DesignData /SampleData/SampleDataSource/SampleDataSource.xaml}"
    >
    <Grid x:Name="LayoutRoot">
        <Pivot Name="Pivot">
            <PivotItem Header="{Binding Name}">
                <Grid ScrollViewer.VerticalScrollMode="Enabled">
                    <StackPanel Margin="0,-20,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image x:ConnectionId='3' Grid.Column="0" Name="Image" Source="{Binding Show.Image}" Width="112" VerticalAlignment="Top"                                />
                            <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                <TextBlock Text="SUMMARY" Style="{ThemeResource BodyTextBlockStyle}" FontWeight="ExtraBold" />
                                <TextBlock x:ConnectionId='4' Name="Summary" TextWrapping="Wrap" Text="{Binding Summary}" Style="{ThemeResource BaseTextBlockStyle}"  Margin="1,0,0,0"                             />
                            </StackPanel>


                        </Grid>
                        <StackPanel Grid.Column="1" Margin="0,10,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Style="{ThemeResource BodyTextBlockStyle}" Grid.Column="0" FontWeight="ExtraBold" Text="GENRE"/>
                                <TextBlock Style="{ThemeResource BodyTextBlockStyle}" Grid.Column="1" TextWrapping="NoWrap" Margin="5,0,0,0" Text="{Binding Genre}"/>
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Style="{ThemeResource BodyTextBlockStyle}" Grid.Column="0" FontWeight="ExtraBold" Text="AIRS"/>
                                <TextBlock Style="{ThemeResource BodyTextBlockStyle}" Grid.Column="1" TextWrapping="NoWrap" Margin="5,0,0,0" Text="{Binding Airs}"/>
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Style="{ThemeResource BodyTextBlockStyle}" Grid.Column="0" FontWeight="ExtraBold" Text="FOLLOWERS"/>
                                <TextBlock Style="{ThemeResource BodyTextBlockStyle}" Grid.Column="1" TextWrapping="NoWrap" Margin="5,0,0,0" Text="{Binding Followers}"/>
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Style="{ThemeResource BodyTextBlockStyle}" Grid.Column="0" FontWeight="ExtraBold" Text="ACTORS"/>
                                <TextBlock Style="{ThemeResource BodyTextBlockStyle}" Grid.Column="1" TextWrapping="NoWrap" Margin="5,0,0,0" Text="{Binding Actors}"/>
                            </Grid>
                        </StackPanel>
                        <TextBlock Name="NTWtitle" Text="NEXT TO WATCH" Style="{ThemeResource MessageDialogTitleStyle}" Margin="0,10,0,0"/>
                        <Grid x:ConnectionId='1' Margin="0,10,0,20"                            DataContext="ep" Name="NTW">
                            <Grid x:Name="ima">
                                <Image x:ConnectionId='2' Source="{Binding Image}" Opacity="0.7"                                 Stretch="UniformToFill"/>
                                <TextBlock Text="{Binding EpisodeName}"
								                    Margin="12,10,12,0"
                                                    FontWeight="ExtraBold"
							                           >
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="ExtraBold"/>
                                            <Setter Property="FontFamily" Value="{ThemeResource PhoneFontFamilySemiBold}" />
                                            <Setter Property="FontSize" Value="{ThemeResource TextStyleExtraLargePlusFontSize}" />
                                            <Setter Property="TextWrapping" Value="NoWrap" />
                                            <Setter Property="LineHeight" Value="33.5" />
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Text="{Binding SeriesName}" VerticalAlignment="Bottom" Margin="10,0,0,10"/>
                                <TextBlock Text="{Binding EpisodePos}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10" />
                            </Grid>
                            <Grid  Visibility="{Binding redo}">
                                <Image Source="Assets/appbar.undo.png" Height="30" Width="30" Margin="0,0,120,0"/>
                                <TextBlock Text="NOT WATCHED" Style="{StaticResource BodyTextBlockStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="25,0,0,0"/>
                            </Grid>
                            
                        </Grid>
                    </StackPanel>
                </Grid>
            </PivotItem>
        </Pivot>
    </Grid>
    <!--FontSize="15"-->

    <Page.Resources>
        <DataTemplate x:Key="seasy">
            <Grid x:ConnectionId='5' Margin="0,0,0,20"                            Width="361.66665649414" Height="209.16665649414">
                <Grid>
                    <Image x:ConnectionId='6' x:Name="ima" Source="{Binding Image}" Opacity="{Binding Opacity}"                                 Stretch="UniformToFill"/>
                    <TextBlock Text="{Binding EpisodeName}"
								                    Margin="12,10,12,0"
                                                    FontWeight="ExtraBold"
							                           >
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="ExtraBold"/>
                                <Setter Property="FontFamily" Value="{ThemeResource PhoneFontFamilySemiBold}" />
                                <Setter Property="FontSize" Value="{ThemeResource TextStyleExtraLargePlusFontSize}" />
                                <Setter Property="TextWrapping" Value="NoWrap" />
                                <Setter Property="LineHeight" Value="33.5" />
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock Text="{Binding SeriesName}" VerticalAlignment="Bottom" Margin="10,0,0,10"/>
                    <TextBlock Text="{Binding EpisodePos}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10" />
                </Grid>
                <Grid  Visibility="{Binding redo}">
                    <Image Source="Assets/appbar.undo.png" Height="30" Width="30" Margin="0,0,120,0"/>
                    <TextBlock Text="NOT WATCHED" Style="{StaticResource BodyTextBlockStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="25,0,0,0"/>
                </Grid>
            </Grid>
        </DataTemplate>
    </Page.Resources>
</Page>

